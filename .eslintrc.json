{
  "parser": "babel-eslint",
  "extends": [
    "koality",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype",
    "react"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "it": true,
    "expect": true
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "rules": {
    "react/prefer-stateless-function": 1
  }
}
